<% method = todo.persisted? ? :patch : :post %>

<%= todo.persisted? ? "Editando" : "Criando" %>

<%= form_with(model: todo, local: true, method: method) do |form| %>
  <div class="mb-4">
    <%= form.text_field :name,
                        placeholder: "Nome da tarefa",
                        class: "form-input mt-1 block w-full border-2 border-handwrite border-black p-2" %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit "Enviar", class: "border-2 border-handwrite border-black p-2" %>

    <%= link_to "Cancelar",
                todos_path,
                class: "border-2 border-handwrite border-black p-2"
    %>
  </div>
<% end %>
