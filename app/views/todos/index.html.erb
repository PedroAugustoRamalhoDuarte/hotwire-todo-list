<div class="container-sm px-4 mx-auto mt-26">
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold underline">
      Minha lista de tarefas
    </h1>

    <button class="border-2 border-handwrite border-black p-2">
      Nova tarefa
    </button>
  </div>


  <% @todos.each do |todo| %>
    <%= turbo_frame_tag "todo_#{todo.id}" do %>
      <div class="flex justify-between border-2 border-handwrite border-black mt-5 p-3">
        <%= todo.name %>
        <div class="flex gap-2">
          <button class="border-2 border-handwrite border-black p-2">
            Edit
          </button>
          <%= button_to "Remover",
                        todo_path(todo.id),
                        method: :delete,
                        class: "border-2 border-handwrite border-black p-2"
          %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>