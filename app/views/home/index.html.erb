<div class="container-sm px-4 mx-auto mt-26">
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold underline">
      Minha lista de tarefas
    </h1>

    <button class="border-2 border-handwrite border-black p-2">
      Nova tarefa
    </button>
  </div>


  <% @todos.each do |todo| %>
    <div class="flex justify-between border-2 border-handwrite border-black mt-5 p-3">
      <%= todo %>
      <div>
        <button class="border-2 border-handwrite border-black p-2">
          Edit
        </button>
        <button class="border-2 border-handwrite border-black p-2">
          Remover
        </button>
      </div>
    </div>
  <% end %>
</div>